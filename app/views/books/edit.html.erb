<div class="edit-container">
  <h1>Editing Book</h1>
  <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f|%>
        <label>
          Title
          <%= f.text_field :title %>
        </label>
        
        <label>
          Body
          <%= f.text_area :body %>
        </label>
        
        <%= f.submit 'Update Book' %>
    <% end %>
    
    <a href = <%= book_path(@book.id) %>>Show</a>
    <a href = "/books">Back</a>
</div>
