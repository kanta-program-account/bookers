<div class="edit-container">
  <h1>Editing Book</h1>
  
  <% if @book.errors.any? %>
    <div class="error-explanation">
        <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
        <div class="error-details">
            <ul>
                <% @book.errors.full_messages.each do |message| %>
                <li class = "error-message"><%= message %></li>
                <% end %>
            </ul>
        </div>
    </div>
  <% end %>
  
  <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f|%>
  <label>
    Title
    <span class = "input"><%= f.text_field :title, class:"text_field text" %></span>
  </label>
  
  <label>
    Body
    <span class = "input"><%= f.text_area :body, class:"text_area text" %></span>
  </label>
  
  <span class = 'input'><%= f.submit 'Update Book', class:"submit_button" %></span>
        
  <% end %>
    <div class = "show_back">
      <a href = <%= book_path(@book.id) %>>Show</a>
      <span> | </span>
      <a href = "/books">Back</a>
    </div>
    
</div>


        